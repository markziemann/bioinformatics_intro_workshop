BootStrap: docker
From: bioconductor/bioconductor_docker:RELEASE_3_19

%post
  # Update apt-get
  apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y nano git libncurses-dev xorg openbox \
    && pip install multiqc \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

  # Install CRAN packages
  Rscript -e 'install.packages(c("RhpcBLASctl","zoo","reshape2","gplots","MASS","scales","eulerr","kableExtra","vioplot","pkgload","beeswarm"))'

  # Install bioconductor packages
  Rscript -e 'BiocManager::install(c("DESeq2","fgsea","limma","topconfects","mitch"))'

  # get a clone of the codes
  git clone https://github.com/markziemann/bioinformatics_intro_workshop.git

  # Set the container working directory
  DIRPATH=/bioinformatics_intro_workshop
  mkdir -p $DIRPATH
  cd $DIRPATH

%environment
  export DIRPATH=/bioinformatics_intro_workshop

%runscript
  cd $DIRPATH
  exec /bin/bash "$@"

%startscript
  cd $DIRPATH

